    <food>
        <title>Gnocchi</title>
        <description>Gnocchi is simple to make with just three ingredients: mashed potato, flour, and egg. This recipe
            is one my family has used for generations.
        </description>
        <servings>4</servings>
        <cuisine>Italian</cuisine>
        <cooking_time>
            <prep_time>10 min</prep_time>
            <total>50 min</total>
        </cooking_time>
        <difficulty>easy</difficulty>
        <ingredients>
            <ingredient>
                <name>flour</name>
                <quantity>2 tbs</quantity>
            </ingredient>
            <ingredient>
                <name>potato</name>
                <quantity>1 medium</quantity>
            </ingredient>
            <ingredient>
                <name>egg</name>
                <quantity>2 medium</quantity>
            </ingredient>
        </ingredients>
        <nutrition>
            <calories>400cal</calories>
            <protein>10p</protein>
            <fat>
                <total>28fat total</total>
                <saturated>20sat</saturated>
            </fat>
            <carbs>49carbs</carbs>
        </nutrition>
    </food>

